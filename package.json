{
	"name": "adabuild",
	"displayName": "adabuild",
	"description": "Custom extension for Adaptiva front-end Angular Build System",
	"version": "0.0.3-rc1",
	"author": "Jesse Rogers <jesse.rogers@adaptiva.com>",
	"icon": "images/adaptiva.png",
	"publisher": "Adaptiva",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "out/vscode/main.js",
	"contributes": {
		"commands": [
			{
				"command": "adabuild.run",
				"title": "adabuild: Run"
			},
			{
				"command": "adabuild.build",
				"title": "adabuild: Build"
			},
			{
				"command": "adabuild.reset",
				"title": "adabuild: Reset"
			},
			{
				"command": "adabuild.stop",
				"title": "adabuild: Stop"
			},
			{
				"command": "adabuild.start",
				"title": "adabuild: Start"
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "http://10.1.10.15/jesserogers/adabuild.git"
	},
	"scripts": {
		"compile:cli": "dotnet publish -r win-x64",
		"esbuild-base": "esbuild ./src/vscode/main.ts --bundle --outfile=out/vscode/main.js --external:vscode --format=cjs --platform=node",
		"precompile:vscode": "shx rm -rf out/vscode",
		"compile:vscode": "npm run esbuild-base",
		"vscode:prepublish": "npm run compile:vscode",
		"package:vscode": "vsce package --out ./dist/",
		"package:all": "npm run compile:cli && npm run package:vscode",
		"postpackage:all": "shx cp README.md dist && shx cp CHANGELOG.md dist && shx cp package.json dist",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.64.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"esbuild": "^0.14.24",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"shx": "^0.3.4",
		"typescript": "^4.5.5",
		"vsce": "^2.6.7"
	}
}
