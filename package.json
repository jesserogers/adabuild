{
	"name": "adabuild",
	"displayName": "adabuild",
	"description": "Custom extension for Adaptiva front-end Angular Build System",
	"version": "0.0.3-rc1",
	"author": "Jesse Rogers <jesse.rogers@adaptiva.com>",
	"icon": "images/adaptiva.png",
	"publisher": "Adaptiva",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "out/vscode/main.js",
	"contributes": {
		"commands": [
			{
				"command": "adabuild.build",
				"title": "adabuild: Build Project"
			},
			{
				"command": "adabuild.incrementalbuild",
				"title": "adabuild: Build Project (Incremental)"
			},
			{
				"command": "adabuild.buildall",
				"title": "adabuild: Build All Projects"
			},
			{
				"command": "adabuild.copytsconfigdev",
				"title": "adabuild: Set TS Config (DEV)"
			},
			{
				"command": "adabuild.copytsconfigprod",
				"title": "adabuild: Set TS Config (PROD)"
			},
			{
				"command": "adabuild.debugapplication",
				"title": "adabuild: Debug Application"
			},
			{
				"command": "adabuild.reset",
				"title": "adabuild: Reset Changes"
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "http://10.1.10.15/jesserogers/adabuild.git"
	},
	"scripts": {
		"precompile:cli": "shx rm -rf out/cli",
		"compile:cli": "tsc -p src/cli",
		"postcompile:cli": "shx cp src/cli/package.json out/cli",
		"exe:cli": "chmod +x ./out/cli/cli.js",
		"start:cli": "npm run compile:cli && npm run exe:cli && npm run start:cli:standalone",
		"start:cli:standalone": "node ./out/cli/cli.js run",
		"esbuild-base": "esbuild ./src/vscode/main.ts --bundle --outfile=out/vscode/main.js --external:vscode --format=cjs --platform=node",
		"precompile:common": "shx rm -rf out/lib",
		"compile:common": "tsc -p src/lib",
		"precompile:vscode": "shx rm -rf out/vscode",
		"compile:vscode": "tsc -p src/vscode",
		"vscode:prepublish": "npm run compile:vscode",
		"package:cli": "npm run compile:common && npm run compile:cli && cd out/cli && npm run pkgr",
		"postpackage:cli": "shx cp out/cli/adabuild.exe ./dist/adabuild.exe && shx cp README.md ./dist/README.md && shx cp CHANGELOG.md ./dist/CHANGELOG.md",
		"package:vscode": "vsce package --out ./dist/",
		"package:all": "npm run package:cli && npm run package:vscode",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"test:cli": "node ./out/cli/main.js"
	},
	"dependencies": {
		"@kuroi/syringe": "^2.0.0",
		"chokidar": "^3.5.3",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/uuid": "^8.3.4",
		"@types/vscode": "^1.64.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"esbuild": "^0.14.24",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"shx": "^0.3.4",
		"typescript": "^4.5.5",
		"vsce": "^2.6.7"
	}
}
